<div id="searchresults" style="max-width: 960px; margin: auto; padding: 2rem;">

  <!-- Search Form -->
  <form action="/search" method="get">
    <p>
      <input
        type="text"
        name="q"
        value="{{ search.terms | escape }}"
        id="result-q"
        placeholder="Search for products..."
        style="width: calc(100% - 110px); padding: 0.5rem;" />
      <input type="submit" value="Search" style="width:100px; padding: 0.5rem;" />
    </p>
  </form>

  {% if search.performed %}

    {% paginate search.results by 10 %}

      {% if search.results == empty %}
        <p>Your search for "<strong>{{ search.terms | escape }}</strong>" did not yield any results.</p>
      {% else %}

        <p>Showing {{ search.results_count }} result{{ search.results_count == 1 ? '' : 's' }} for "<strong>{{ search.terms | escape }}</strong>":</p>

        <ol style="list-style: none; padding-left: 0;">
          {% for item in search.results %}
            <li style="margin-bottom: 2rem; border-bottom: 1px solid #ccc; padding-bottom: 1rem;">
              <h3 style="font-size: 1.25rem;">{{ item.title | link_to: item.url }}</h3>

              {% if item.featured_image %}
                <div class="result-image" style="margin: 0.5rem 0;">
                  <a href="{{ item.url }}" title="{{ item.title }}">
                    <img
                      src="{{ item.featured_image | image_url: width: 160 }}"
                      alt="{{ item.title }}"
                      style="max-width: 100px; height: auto;" />
                  </a>
                </div>
              {% endif %}

              {% if item.content %}
                <p style="color: #555;">
                  {{ item.content | strip_html | truncatewords: 40 | highlight: search.terms }}
                </p>
              {% endif %}
            </li>
          {% endfor %}
        </ol>

      {% endif %}

      <!-- Pagination -->
      <div style="margin-top: 2rem;">
        {{ paginate | default_pagination }}
      </div>

    {% endpaginate %}

  {% endif %}

</div>
