<section class="container-fluid section-wrapper py-5">
  <h2 class="text-center mb-4">{{ section.settings.heading }}</h2>
  <div class="row">
    {% assign products = collections[section.settings.collection].products %}
    {% for product in products limit: section.settings.limit %}
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | image_url: width: 600 }}" class="card-img-top" alt="{{ product.title }}">
          </a>
          <div class="card-body text-center">
            <h5 class="card-title">{{ product.title }}</h5>
            <p class="card-text">{{ product.price | money }}</p>
            <a href="{{ product.url }}" class="btn btn-primary">View Product</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "number",
      "id": "limit",
      "label": "Max Products",
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "Product Grid"
    }
  ]
}
{% endschema %}
