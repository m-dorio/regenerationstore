
<section
  class="bg-banner-image bg-dark text-white rounded-3 shadow-lg py-5"
  style="background-image: url('{{ "banner-image.jpg" | asset_url }}'); background-size: cover; background-position: center; background-repeat: no-repeat;"
>
  <div class="overlay"></div>

  <div class="banner-grid">
    <!-- Left Content -->
    <div class="content-wrapper">
      <h1 class="display-4 fw-bold">{{ section.settings.heading }}</h1>
      <p class="lead mb-4">{{ section.settings.subtext }}</p>
      <a
        href="{{ section.settings.button_link }}"
        class="btn btn-outline-light bg-dark text-white btn-lg px-4"
        aria-label="{{ section.settings.button_text }}"
      >
        {{ section.settings.button_text }}
      </a>
    </div>

    <!-- Right Carousel -->

    <div class="swiper product-swiper">
      {% assign selected_collection = collections[section.settings.product_collection] %}
      {% if selected_collection and selected_collection.products.size > 0 %}
        <div class="swiper-wrapper">
          {% for product in selected_collection.products limit: 5 %}
            <div class="swiper-slide">
              <a href="{{ product.url }}" class="text-white text-decoration-none d-block text-center">
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.title }}"
                  class="img-fluid rounded mb-2"
                  width="200"
                  height="200"
                >
                <h5>{{ product.title }}</h5>
                <p>{{ product.price | money }}</p>
              </a>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="swiper-wrapper">
          {% for i in (1..5) %}
            <div class="swiper-slide text-white text-center">
              <img
                src="{{ 'fallback-product.jpg' | asset_url }}"
                alt="Placeholder product"
                class="img-fluid rounded mb-2"
                width="auto"
                height="250px"
              >
              <h5>Sample Product {{ i }}</h5>
              <p>$19.99</p>
            </div>
          {% endfor %}
        </div>
      {% endif %}

      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</section>

{% stylesheet %}
  .bg-banner-image {
    position: relative;
    min-height: 60vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: radial-gradient(rgba(0, 0, 0, 0.1), #ffffff73);
    z-index: 1;
  }

  .banner-grid {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    width: 100%;
  }

  .content-wrapper {
    max-width: 100%;
    padding: 2rem;
    text-align: center;
  }

/* Swiper wrapper base */
.product-swiper {
  position: relative;
  padding: 2rem 0;
  width: 100%;
}

/* The wrapper that holds the slides */
.product-swiper .swiper-wrapper {
  display: flex;
  align-items: stretch;
}

/* Each individual slide */
.product-swiper .swiper-slide {
  background-color: rgba(255, 255, 255, 0.05);
  padding: 1rem;
  border-radius: 1rem;
  text-align: center;
  width: auto;
  transition: transform 0.3s ease;
}

.product-swiper .swiper-slide:hover {
  transform: translateY(-5px);
}

/* Product images */
.product-swiper img {
  max-width: 100%;
  height: 180px;
  object-fit: cover;
  border-radius: 0.5rem;
}

/* Navigation buttons */
.swiper-button-next,
.swiper-button-prev {
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 1rem;
  border-radius: 50%;
  top: 40%;
  transform: translateY(-50%);
}

.swiper-button-next:hover,
.swiper-button-prev:hover {
  background-color: rgba(255, 255, 255, 0.2);
}

/* Pagination dots if you enable them */
.swiper-pagination-bullet {
  background: white;
  opacity: 0.6;
}

.swiper-pagination-bullet-active {
  opacity: 1;
}

/* Responsive tweaks */
@media (max-width: 768px) {
  .product-swiper {
    padding: 1rem 0;
  }

  .product-swiper .swiper-slide {
    padding: 0.5rem;
  }

  .swiper-button-next,
  .swiper-button-prev {
    display: none; /* Hide nav arrows on small screens if desired */
  }
}


  @media (max-width: 768px) {
    .banner-grid {
      grid-template-columns: 1fr;
    }
    .content-wrapper {
      padding: 1rem;
      max-width: 100%;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero Banner - Dark Theme",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Browse our collection of amazing products"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "collection",
      "id": "product_collection",
      "label": "Product Collection"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner - Dark"
    }
  ]
}
{% endschema %}
