{% style %}
  .add-to-cart-btn {
  background-color: #111;
  color: white;
  padding: 0.5rem 1.5rem;
  border: none;
  margin-top: 1rem;
  cursor: pointer;
}

.add-to-cart-btn:hover {
  background-color: #444;
}

{% endstyle %}


<div class="product-page container">
  <div class="product-wrapper" style="display: flex; flex-wrap: wrap; gap: 2rem;">
    <!-- Product Image -->
    <div class="product-image" style="flex: 1;">
      {% if product.featured_image %}
        <img src="{{ product.featured_image | image_url: width: 800 }}" alt="{{ product.title }}" style="max-width: 100%;">
      {% endif %}
    </div>

    <!-- Product Details -->
    <div class="product-details" style="flex: 1;">
      <h1>{{ product.title }}</h1>

      <!-- Price -->
      <p class="product-price">
        {{ product.price | money }}
      </p>

      <!-- Product Form -->
     <form method="post" action="/cart/add">
  {% if product.has_only_default_variant == false %}
    <label for="product-variant">Choose a variant:</label>
    <select name="id" id="product-variant">
      {% for variant in product.variants %}
        <option value="{{ variant.id }}">
          {{ variant.title }} - {{ variant.price | money }}
        </option>
      {% endfor %}
    </select>
  {% else %}
    <input type="hidden" name="id" value="{{ product.variants.first.id }}">
  {% endif %}

  <!-- Quantity -->
  <label for="quantity">Quantity:</label>
  <input type="number" id="quantity" name="quantity" value="1" min="1" />

  <!-- Add to Cart Button -->
  <button type="submit" class="add-to-cart-btn">
    Add to cart
  </button>
</form>


      <!-- Description -->
      <div class="product-description" style="margin-top: 1rem;">
        {{ product.description }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Template",
  "settings": []
}
{% endschema %}
