{% comment %}
  Collection All Template - shows all products under /collections/all
{% endcomment %}

<section class="container-fluid section-wrapper py-5">
  <div class="custom-container">
    <h1 style="text-align: center; font-size: 2.25rem; margin-bottom: 2rem;">All Products</h1>

    {% paginate collection.products by 12 %}
      {% if collection.products.size > 0 %}
        <div class="product-grid">
       {% for product in collection.products %}
  <div class="product-card">
    <a href="{{ product.url }}">
      {% if product.featured_image %}
        <img
          src="{{ product.featured_image | image_url: width: 500 }}"
          alt="{{ product.title | escape }}"
          loading="lazy"
        />
      {% else %}
        <img src="{{ 'placeholder.jpg' | asset_url }}" alt="No image" />
      {% endif %}
    </a>

    <div class="product-info">
      <h3>{{ product.title }}</h3>
      <p class="product-price">
        {% if product.price_varies %}
          From {{ product.price_min | money_with_currency }}
        {% else %}
          {{ product.price | money_with_currency }}
        {% endif %}
      </p>

      {% if product.variants.size == 1 %}
        <!-- Form for single-variant products -->
        <form method="post" action="/cart/add">
          <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
          <label for="quantity-{{ product.id }}" style="display:block;">Qty:</label>
          <input type="number" name="quantity" id="quantity-{{ product.id }}" value="1" min="1" style="width: 60px; margin-bottom: 10px;" />
          <button type="submit" class="btn-add-to-cart">Add to Cart</button>
        </form>
      {% else %}
        <!-- For multi-variant products, link to product page -->
        <p><a href="{{ product.url }}" class="btn-select-options">Select Options</a></p>
      {% endif %}
    </div>
  </div>
{% endfor %}

        </div>

        <div class="pagination">
          {{ paginate | default_pagination }}
        </div>
      {% else %}
        <p style="text-align:center; margin-top: 2rem;">No products found in this collection.</p>
      {% endif %}
    {% endpaginate %}
  </div>
</section>

{% stylesheet %}
  .product-grid {
  width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;

  }

  .product-card {
    border: 1px solid #f0f0f0;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    transition: box-shadow 0.3s ease;
    background-color: #fff;
  }

  .product-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .product-card a {
    color: inherit;
    text-decoration: none;
    display: block;
    height: 100%;
  }

  .product-info {
    padding: 1rem;
    text-align: center;
  }

  .product-info h3 {
    color:#333;
    font-size: 1.125rem;
    margin: 0.5rem 0;
  }

  .product-price {
    font-weight: bold;
    color: #007b5e;
  }

  .pagination {
    margin-top: 2.5rem;
    text-align: center;
  }

  @media (max-width: 480px) {
    .product-grid {
      grid-template-columns: 1fr;
    }
  }

  .btn-add-to-cart,
.btn-select-options {
  display: inline-block;
  background-color: #007b5e;
  color: white;
  padding: 0.5rem 1rem;
  font-size: 0.9rem;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  text-decoration: none;
}

.btn-add-to-cart:hover,
.btn-select-options:hover {
  background-color: #005f49;
}

    .product-card img {
    object-fit: cover;
    width: 100%;
    height: auto;
    min-height: 260px;
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .product-card:hover img {
    transform: scale(1.03);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "All Products Collection",
  "settings": []
}
{% endschema %}
